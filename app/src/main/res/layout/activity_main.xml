<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id = "@+id/layout_wrapper"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.visualmimo.MainActivity" >

    <ProgressBar
            style="@android:style/Widget.ProgressBar"
            android:id="@+id/loading_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />
    
    <FrameLayout
        android:id="@+id/cameraView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />

    <FrameLayout
        android:id="@+id/drawView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />

    <TextView
        android:id="@+id/fps_range"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_above="@+id/resolution"
        android:textColor="@color/displayColor"
        android:text=""/>

    <TextView
        android:id="@+id/resolution"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_above="@+id/decoded_data"
        android:textColor="@color/displayColor"
        android:text=""/>

    <TextView
        android:id="@+id/decoded_data"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:textColor="@color/displayColor"
        android:text=""/>

    <Button
        android:id="@+id/resume_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Resume"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/resume_button"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message"
        android:text="time elapsed:"/>

</RelativeLayout>
